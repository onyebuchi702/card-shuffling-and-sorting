{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "baseUrl": "..",
    "paths": {
      "@shared/types/*": ["types/*"],
      "@shared/enums/*": ["enums/*"]
    }
  },
  "include": [
    "src/**/*",
    "../types/**/*",
    "../enums/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
